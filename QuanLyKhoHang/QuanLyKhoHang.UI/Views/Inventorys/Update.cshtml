    function formatCurrency(target) {
        const pat = /(\,[0-9]{0,3})$/gm;

        if (pat)
            var separate = ".";
        var s = target.value.toString().split('.').join("");
        var regex = /\B(?=(\d{3})+(?!\d))/g;

        if (s.includes(',')) {
            s = s.split(',');
            var ret = s[0].replace(regex, separate);
            ret = ret + ',' + s[1];
        } else {
            var ret = s.replace(regex, separate);
        }
        target.value = ret;
